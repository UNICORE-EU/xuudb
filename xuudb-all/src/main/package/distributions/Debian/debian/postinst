#!/bin/sh
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	
	chown unicore:unicore /etc/unicore/xuudb/
	chmod 755 /etc/unicore/xuudb/
	
	chown unicore:unicore /etc/unicore/xuudb/client_logging.properties
	chmod 644 /etc/unicore/xuudb/client_logging.properties
	
	chown unicore:unicore /etc/unicore/xuudb/logging.properties
	chmod 640 /etc/unicore/xuudb/logging.properties

	chown unicore:unicore /etc/unicore/xuudb/xuudb_client.conf
	chmod 644 /etc/unicore/xuudb/xuudb_client.conf
	
	chown unicore:unicore /etc/unicore/xuudb/xuudb_server.conf
	chmod 640 /etc/unicore/xuudb/xuudb_server.conf

	chown unicore:unicore /etc/unicore/xuudb/startup.properties
	chmod 644 /etc/unicore/xuudb/startup.properties

	chown unicore:unicore /etc/unicore/xuudb/xuudb.acl
	chmod 640 /etc/unicore/xuudb/xuudb.acl

	chmod 755 /usr/sbin/unicore-xuudb-start
	chmod 755 /usr/sbin/unicore-xuudb-stop
	chmod 755 /usr/sbin/unicore-xuudb-admin
	chmod 755 /usr/sbin/unicore-xuudb-status
	chmod 755 /etc/init.d/unicore-xuudb

	chmod 755 /usr/share/doc/unicore/xuudb/
	chmod 644 /usr/share/doc/unicore/xuudb/*

	chmod 755 /usr/share/unicore/xuudb/lib
	chmod 644 /usr/share/unicore/xuudb/lib/*.jar

	chown unicore:unicore /var/lib/unicore
	chmod 750 /var/lib/unicore
	
	chown unicore:unicore /var/lib/unicore/xuudb
	chmod 750 /var/lib/unicore/xuudb
	
	chown unicore:unicore /var/lib/unicore/xuudb/data
	chmod 750 /var/lib/unicore/xuudb/data

	chown unicore:unicore /var/log/unicore
	chmod 755 /var/log/unicore
	
	chown unicore:unicore /var/log/unicore/xuudb
	chmod 755 /var/log/unicore/xuudb
	
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
