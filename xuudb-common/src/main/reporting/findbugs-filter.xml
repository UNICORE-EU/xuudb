<?xml version="1.0" encoding="UTF-8"?>

<FindBugsFilter>
  <LastVersion value="-1" relOp="NEQ"/>
  <And>
    <Class name="de.fzj.unicore.xuudb.ShutdownHook"/>
    <Bug pattern="DM_EXIT"/>
  </And>
  <And>
    <Class name="de.fzj.unicore.xuudb.X509Utils"/>
    <Method name="getStringFromPEMFile"/>
    <Bug pattern="NP_DEREFERENCE_OF_READLINE_VALUE"/>
  </And>
  <And>
    <Class name="de.fzj.unicore.xuudb.Configuration"/>
    <Or>
      <Method name="createDefaultServer"/>
      <Method name="createDefaultClient"/>
    </Or>
    <Bug pattern="REC_CATCH_EXCEPTION"/>
  </And>
</FindBugsFilter>
